{
  "name": "docker-developer",
  "version": "0.1.8",
  "description": "This app will be an electron application, written using typescript, react, redux, and socket.io that allows the user to manage development resources launched on their development machine.  Similar to the 'Docker Desktop' applicaiton, we will monitor and orchestrate our local docker environment using a graphical UI.  We will have the concept of \"Projects\" to mean a local github repo, usually containing a docker-compose file but allways has a Dockerfile. An ambitious goal we are going to tackle is this: The ability to use locally hosted AI models to assist while building projects, that will not only help to code the app, but they will also have access to the tools to orchestrate the management of this system.  Example, if a user asks to scale a process up or down, the AI agent will have the tools to do so.",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "npm run build:main && electron .",
    "dev": "npm start",
    "clean": "rimraf dist",
    "build:main": "npm run clean && tsc -p tsconfig.main.json",
    "electron-build": "npm run build:renderer && npm run build:main",
    "build:renderer": "cd src/renderer && npm run build",
    "postinstall": "rimraf node_modules/cpu-features",
    "rebuild": "electron-rebuild --arch=arm64 --only=node-pty --ignore=\"cpu-features\"",
    "generate-icons": "node scripts/generate-icons.js",
    "prebuild": "npm run generate-icons",
    "build": "npm run electron-build && electron-builder",
    "build:mac": "npm run electron-build && electron-builder --mac",
    "build:mac:arm64": "npm run electron-build && electron-builder --mac --arm64",
    "build:mac:x64": "npm run electron-build && electron-builder --mac --x64",
    "build:win": "npm run electron-build && electron-builder --win",
    "build:linux": "npm run electron-build && electron-builder --linux",
    "build:all": "npm run electron-build && electron-builder --mac --win --linux",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:main": "jest --config jest.config.js --testMatch='**/__tests__/main/**/*.test.ts'",
    "test:main:ci": "jest --config jest.config.js --testMatch='**/__tests__/main/**/*.test.ts' --watchAll=false",
    "test:renderer": "cd src/renderer && npm test",
    "test:renderer:ci": "cd src/renderer && npm run test:ci",
    "test:ci": "npm run test:main:ci && npm run test:renderer:ci",
    "test:all": "npm run test:main && npm run test:renderer",
    "lint": "npm run lint:renderer",
    "lint:renderer": "cd src/renderer && npm run lint",
    "lint:fix": "cd src/renderer && npm run lint:fix"
  },
  "build": {
    "appId": "com.higginsrob.docker-developer",
    "productName": "Docker Developer",
    "files": [
      "dist/**/*",
      "src/renderer/build/**/*",
      "src/renderer/package.json",
      "src/renderer/node_modules/**/*",
      "projects.json",
      "bin/**/*",
      "lib/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon-win.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "icon": "assets/icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "higginsrob",
      "repo": "docker-developer"
    }
  },
  "keywords": [],
  "author": "Rob Higgins <higginsrob@gmail.com>",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "dockerode": "^4.0.9",
    "node-pty": "^1.1.0-beta38",
    "simple-git": "^3.28.0",
    "socket.io": "^4.8.1",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/dockerode": "^3.3.45",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/sql.js": "^1.4.9",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "rimraf": "^6.0.1",
    "sharp": "^0.33.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.1"
  },
  "overrides": {
    "@types/node": "^24.9.2"
  }
}
